---
layout: null-layout
---

{% comment %}
  JSON feed for member blog posts ("writings"). See:
  
    https://jsonfeed.org/
{% endcomment %}

{
  "version": "https://jsonfeed.org/version/1",
  "title": {{ site.name | append: " - Latest Writings" | jsonify }},
  "description": "{{ site.description | jsonify }}",
  "home_page_url": "{{ site.url }}",
  "feed_url": "{{ site.url }}/writings/feed.json",
  "favicon": "{{ site.url}}/assets/static/yak-logo.png",
  {% if site.author %}
    "author": {
      "name": {{ site.author | jsonify }}
    },
  {% endif %}

  {% comment %}
    Outputs `site.feed_items` (or 10) items from
    `site.categories.writings`. We do the "Daring Fireball" thing here
    and link to the original (external) post whenever possible, so as to
    drive traffic to member websites.
  {% endcomment %}
  "items": [
    {% assign feed_items = site.feed_items | default: 15 %}
    {% for post in site.categories.writings limit:feed_items %}
      {
        "id": "{% if post.original_link %}{{ post.original_link | jsonify }}{% else %}{{ site.url }}{{ post.url }}{% endif %}",
        "url": "{% if post.original_link %}{{ post.original_link | jsonify }}{% else %}{{ site.url }}{{ post.url }}{% endif %}",
        "title": {{ post.title | jsonify }},
        {% if post.excerpt %}
          "content_html": {{ post.excerpt | jsonify  }},
        {% else %}
          "content_html": {{ post.content | jsonify  }},
        {% endif %}
        "date_published": "{{ post.date | date_to_rfc822 }}"
      }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ]
}
